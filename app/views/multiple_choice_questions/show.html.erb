<div class="row">
	<div class="span16">
		<b><%= @multiple_choice_question.title %></b>
	</div>
</div>
<div class="row">
	<div class="span16">
		<%= @multiple_choice_question.prompt %>
	</div>
</div>
<div class="row">
	<div class="span16">
		<% @possible_answers.each do |answer| %>
		<span style="margin-right:10px">
			<%= radio_button "question", @multiple_choice_question.id, answer, style: "margin-top:-5px" %>
			<%= answer %>
		</span>
		<% end %>
	</div>
</div>

<%= link_to 'Edit', edit_multiple_choice_question_path(@multiple_choice_question) %> 