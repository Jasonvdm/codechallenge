<% home_index = params[:controller] == "home" && params["action"] == "index" %>
<div class="navbar navbar-fixed-top" style="opacity:0.8; <%= "position: static" unless home_index %>;">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to "CodeChallenge", root_url, class: "brand" %>
      <div class="btn-group pull-left">
        <ul class="nav">
        </ul>
      </div>
      <div class="btn-group pull-right">
        <% if user_signed_in? %>
        <%= render partial: "/layouts/navbar_signed_in" %>
        <% else %>
        <%= render partial: "/layouts/navbar_signed_out" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
