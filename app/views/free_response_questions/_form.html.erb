<%= simple_form_for(@free_response_question) do |f| %>

<div class="form-inputs">
  <%= f.input :title %>
  <%= f.input :prompt, input_html: {:style => "height: 200px"} %>
  <%= f.input :instructions, input_html: {:style => "height: 200px"} %>
  <%= f.input :category, :collection => mc_categories %>
</div>

<div class="form-actions">
  <%= f.button :submit %>
</div>
<% end %>
